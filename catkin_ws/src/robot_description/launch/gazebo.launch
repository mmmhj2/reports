<launch>
    <arg name="model" default="$(find robot_description)/urdf/robotic-arm-3dof.urdf" />
    <include file="$(find gazebo_ros)/launch/empty_world.launch" />
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

    <node name="rviz_node" pkg="rviz" type="rviz"
		args="-d $(find robot_description)/config/rviz.rviz"
		required="true"
		/>

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        args="-z 5.0 -urdf -model rhex4 -param robot_description"
        respawn="false" output="screen" />

    <!-- Load controllers -->
    <node name="robot_state_publisher" 
        pkg="robot_state_publisher" 
        type="robot_state_publisher"
        required="true">
		<param name="ignore_timestamp" value="true"/>
        <remap from="joint_states" to="/robotic_arm/joint_states" />
	</node>

    <rosparam command="load" file="$(find robot_description)/config/controller.yaml" />
	<node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager"
		ns="/robotic_arm"
		args="spawn 
        joint_state_controller 
        joint_1_position_controller 
        joint_2_position_controller 
        joint_3_position_controller"
		/>

</launch>
